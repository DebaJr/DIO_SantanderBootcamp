<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tittleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_alias"
        android:textAlignment="center"
        android:textColor="@color/app_primary"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unitsTV"
        app:layout_constraintTop_toBottomOf="@id/tittleTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/units"
        android:textColor="@color/app_secondary"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:paddingVertical="24dp"
        app:layout_constraintHorizontal_bias="0.05"
        />

    <RadioGroup
        android:id="@+id/height_units_RGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/unitsTV"
        app:layout_constraintTop_toTopOf="@id/unitsTV"
        app:layout_constraintBottom_toBottomOf="@id/unitsTV"
        android:layout_marginStart="8dp"
        >

        <RadioButton
            android:id="@+id/unit_feet_Radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/feet"
            android:textSize="20sp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/unit_meters_Radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/meters"
            android:textSize="20sp"/>

    </RadioGroup>

    <View
        android:id="@+id/DIVIDER"
        android:layout_width="1dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toEndOf="@id/height_units_RGroup"
        app:layout_constraintEnd_toStartOf="@id/weight_units_RGroup"
        app:layout_constraintTop_toTopOf="@id/unitsTV"
        app:layout_constraintBottom_toBottomOf="@id/unitsTV"
        android:layout_marginStart="8dp"
        android:background="?android:attr/listDivider"
        android:visibility="visible"
        tools:visibility="visible" />

    <RadioGroup
        android:id="@+id/weight_units_RGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/DIVIDER"
        app:layout_constraintTop_toTopOf="@id/unitsTV"
        app:layout_constraintBottom_toBottomOf="@id/unitsTV"
        android:layout_marginStart="8dp"
        >

        <RadioButton
            android:id="@+id/unit_stones_Radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stones"
            android:textSize="20sp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/unit_kilograms_Radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kilogram"
            android:textSize="20sp"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/heightTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unitsTV"
        android:layout_marginTop="24dp"
        android:paddingVertical="16dp"
        android:text="@string/height"
        android:textColor="@color/app_secondary"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.1" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/height_feet_Group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="height_feet_ET,height_inches_ET"
        />

    <EditText
        android:id="@+id/height_feet_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:autofillHints="@string/height_needed_msg"
        android:hint="@string/feet"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@id/heightTV"
        app:layout_constraintStart_toEndOf="@id/heightTV"
        app:layout_constraintTop_toTopOf="@id/heightTV" />

    <EditText
        android:id="@+id/height_inches_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:autofillHints="@string/height_needed_msg"
        android:hint="@string/inches"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@id/heightTV"
        app:layout_constraintStart_toEndOf="@id/height_feet_ET"
        app:layout_constraintTop_toTopOf="@id/heightTV" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/height_meters_Group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="height_meters_ET"
        />

    <EditText
        android:id="@+id/height_meters_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:hint="@string/meters"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@id/heightTV"
        app:layout_constraintStart_toEndOf="@id/heightTV"
        app:layout_constraintTop_toTopOf="@id/heightTV"
        android:autofillHints="@string/height_needed_msg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weightTV"
        app:layout_constraintTop_toBottomOf="@id/unitsTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/weight"
        android:textColor="@color/app_secondary"
        android:textSize="20sp"
        android:layout_marginTop="98dp"
        android:paddingVertical="16dp"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/weight_stones_Group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="weight_stones_ET"
        />

    <EditText
        android:id="@+id/weight_stones_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:hint="@string/stones"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@id/weightTV"
        app:layout_constraintStart_toEndOf="@id/weightTV"
        app:layout_constraintTop_toTopOf="@id/weightTV"
        android:autofillHints="@string/height_needed_msg"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/weight_kg_Group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="weight_kg_ET"
        />

    <EditText
        android:id="@+id/weight_kg_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:hint="@string/kilogram"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@id/weightTV"
        app:layout_constraintStart_toEndOf="@id/weightTV"
        app:layout_constraintTop_toTopOf="@id/weightTV"
        android:autofillHints="@string/height_needed_msg"/>

</androidx.constraintlayout.widget.ConstraintLayout>